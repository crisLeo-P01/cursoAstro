---
import Layout from "./Layout.astro";

const {
  content: { title, description },
} = Astro.props;
---

<Layout title="blog del dia">
  <section>
    <div class="mx-auto max-w-screen-xl px-4 py-6 sm:px-6 sm:py-4 lg:px-8">
      <div class="max-w-3xl">
        <h2 class="text-white">{title}</h2>
        <p class="text-orange-400">{description}</p>
        <article class="text-lime-600">
          <slot />
        </article>
      </div>
    </div>
  </section>
</Layout>
