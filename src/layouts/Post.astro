---
import { fechaPost } from "../utils/fechaPost";
import Layout from "./Layout.astro";

const {
  content: { title, pubDate, image, tags }
} = Astro.props;
---

<Layout title="Post al dÃ­a">
  <section class="dark:bg-gray-900">
    <div class="mx-auto max-w-screen-xl px-4 py-6 sm:px-6 sm:py-4 lg:px-8">
      <div class="max-w-3xl">
        <h2 class="text-white text-3xl font-bold sm:text-4xl">
          {title}
        </h2>
        <span
          class="flex flex-col sm:gap-y-2 md:flex-row md:items-center md:gap-y-0 md:divide-x md:divide-textColor mt-4"
        >
          <time class="pr-2 text-white">{fechaPost(pubDate)}</time>
          <ul class="flex flex-wrap gap-2">
            {
              tags.map((tag: unknown) => (
                <li class="whitespace-nowrap rounded-full bg-purple-200 px-2.5 py-0.5 text-xs text-purple-600">
                  {tag}
                </li>
              ))
            }
          </ul>
        </span>
      </div>

      <div class="mt-8 grid grid-cols-1 gap-8 lg:grid-cols-2 lg:gap-16">
        <div class="relative h-64 overflow-hidden sm:h-80 lg:h-full">
          <img alt={title} src={image} class="absolute inset-0 h-full w-full object-cover" />
        </div>

        <div class="lg:py-16">
          <article class="space-y-4 text-gray-600">
            <slot />
          </article>
        </div>
      </div>
    </div>
  </section>
</Layout>
