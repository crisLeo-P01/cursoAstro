---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="mx-auto max-w-screen-xl p-4 py-8 dark:bg-gray-900">
  <h1 class="mb-4">
    <a href="/">
      <span
        class="font-extrabold text-transparent text-4xl bg-clip-text bg-gradient-to-r from-purple-400 to-purple-600"
      >
        {title}
      </span>
    </a>
  </h1>
</div>
